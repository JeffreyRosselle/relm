<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <PackageId>Relm</PackageId>
    <PackageVersion>2.1.0</PackageVersion>
    <Authors>Jeffrey Rosselle</Authors>
    <PackageLicenseUrl>http://opensource.org/licenses/MS-PL</PackageLicenseUrl>
    <Description>Relm is a lightweight nuget package used to alter your images or byte arrays. Crop your image, change its size and type or compress them to save disk space.</Description>
    <PackageProjectUrl>https://github.com/JeffreyRosselle/relm</PackageProjectUrl>
    <PackageReleaseNotes>Fix issues</PackageReleaseNotes>
    <Copyright>Copyright ©2022 Jeffrey Rosselle</Copyright>
    <PackageTags>photoshop image converter compress crop resize relm jeffrey rosselle</PackageTags>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="System.Drawing.Common" Version="6.0.0" />
  </ItemGroup>

</Project>
